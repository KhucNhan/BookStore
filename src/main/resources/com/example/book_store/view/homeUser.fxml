<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<GridPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.book_store.Controller.HomeUserController">
    <VBox>
        <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <HBox alignment="CENTER" prefHeight="25.0" prefWidth="500.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Button fx:id="goToHome" mnemonicParsing="false" onAction="#goToHome" text="Trang chủ">
                <HBox.margin>
                    <Insets left="10.0" right="10.0" />
                </HBox.margin></Button>
            <Button fx:id="goToCart" mnemonicParsing="false" onAction="#goToCart" text="Giỏ hàng">
                <HBox.margin>
                    <Insets left="10.0" right="10.0" />
                </HBox.margin></Button>
            <Button mnemonicParsing="false" text="Thống kê">
                <HBox.margin>
                    <Insets left="10.0" right="10.0" />
                </HBox.margin></Button>
            <TextField prefHeight="25.0" prefWidth="552.0" />
            <Button prefHeight="25.0" prefWidth="87.0" text="Search">
                <HBox.margin>
                    <Insets left="10.0" />
                </HBox.margin>
            </Button>
            <MenuButton contentDisplay="RIGHT" mnemonicParsing="false" prefWidth="75.0" text="Setting">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#updateUserInformation" text="Chỉnh sửa thông tin cá nhân" />
                    <MenuItem mnemonicParsing="false" onAction="#updateUserPassword" text="Đổi mật khẩu" />
                    <MenuItem mnemonicParsing="false" onAction="#deactivationUser" text="Xóa tài khoản" />
                    <MenuItem mnemonicParsing="false" onAction="#logout" text="Đăng xuất" />
                </items>
                <HBox.margin>
                    <Insets bottom="10.0" left="200.0" right="10.0" top="5.0" />
                </HBox.margin>
            </MenuButton>
            <padding>
                <Insets left="25.0" right="25.0" />
            </padding>
        </HBox>
        <HBox alignment="CENTER" prefHeight="25.0" prefWidth="253.0" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <BorderPane prefHeight="701.0" prefWidth="1400.0">
            <bottom>
                <HBox style="-fx-background-color: #02212c; -fx-pref-height: 50px; -fx-alignment: CENTER;">
                    <HBox alignment="CENTER" spacing="40">
                        <Hyperlink layoutX="14.0" layoutY="14.0"  style="-fx-text-fill: white;" text="Facebook |" />

                        <Hyperlink layoutX="15.0" layoutY="15.0"  style="-fx-text-fill: white;" text="Intagram |" />
                    </HBox>
                </HBox>
            </bottom>
            <right>
                <ScrollPane fitToWidth="true" minHeight="628" prefHeight="701.0" prefWidth="1400.0" BorderPane.alignment="CENTER">
                    <VBox fx:id="booksDisplayArea">
                        <FlowPane fx:id="booksContainer" hgap="100" minHeight="701" minWidth="150" style="-fx-padding: 30 40 30 30;" vgap="20">
                            <effect>
                                <DropShadow color="#807172" offsetX="4" offsetY="4" radius="10" />
                            </effect>
                        </FlowPane>
                    </VBox>
                </ScrollPane>
            </right>
        </BorderPane>
    </VBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
