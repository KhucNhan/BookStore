            <TableColumn fx:id="amountColumn" prefWidth="73." text="Số lượng" />
            <TableColumn fx:id="bookTypeIDColumn" prefWidth="89" text="Mã loại sách" />
            <TableColumn fx:id="publisherIDColumn" prefWidth="109" text="Mã nhà xuất bản" />
            <TableColumn fx:id="statusColumn" prefWidth="97" text="Trạng thái" />
            <TableColumn fx:id="actionColumn" prefWidth="142.0" text="Hành động">
            </TableColumn>
        </columns>
      <GridPane.margin>
         <Insets bottom="10.0" left="50.0" top="10.0" />
      </GridPane.margin>
    </TableView>

    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0" GridPane.columnSpan="3" GridPane.rowIndex="4" />
     <Button fx:id="addBook" contentDisplay="CENTER" prefHeight="25.0" prefWidth="119.0" text=" Thêm sách "  GridPane.columnIndex="2" GridPane.rowIndex="2">
