             <HBox fx:id="menuBar" alignment="CENTER" prefHeight="55.0" prefWidth="1513.0" spacing="20.0" BorderPane.alignment="CENTER">
                 <Button mnemonicParsing="false" onAction="#goToHome" prefWidth="130.0" text="Trang chủ">
                     <HBox.margin>
                         <Insets />
                     </HBox.margin>
                     <font>
                         <Font size="16.0" />
                     </font>
                 </Button>
                 <Button fx:id="goToUser" mnemonicParsing="false" onAction="#goToUser" prefWidth="130.0" text="Người dùng">
                     <HBox.margin>
                         <Insets />
                     </HBox.margin>
                     <font>
                         <Font size="16.0" />
                     </font>
                 </Button>
                 <Button fx:id="goToOrder" mnemonicParsing="false" onAction="#goToOrder" prefWidth="130.0" text=" Đơn hàng">
                     <HBox.margin>
                         <Insets />
                     </HBox.margin>
                     <font>
                         <Font size="16.0" />
                     </font>
                 </Button>
                 <Button mnemonicParsing="false" onAction="#goToTop5" prefWidth="130.0" text="Thống kê">
                     <HBox.margin>
                         <Insets />
                     </HBox.margin>
                     <font>
                         <Font size="16.0" />
                     </font>
                 </Button>
                 <Button mnemonicParsing="false" onAction="#goToHistory" prefWidth="185.0" text="Lịch sử mua hàng">
                     <HBox.margin>
                         <Insets />
                     </HBox.margin>
                     <font>
                         <Font size="16.0" />
                     </font>
                 </Button>
                 <HBox alignment="CENTER" prefHeight="100.0" spacing="10.0">
                     <children>
                         <TextField fx:id="searchField" prefHeight="35.0" prefWidth="220.0"
                                    promptText="Nhập từ khóa tìm kiếm">
                             <font>
                                 <Font size="14.0"/>
                             </font>
                         </TextField>
                         <Button fx:id="searchButton" onAction="#search" prefHeight="25.0" prefWidth="130.0" text="Tìm kiếm">
                             <HBox.margin>
                                 <Insets/>
                             </HBox.margin>
                             <font>
                                 <Font size="16.0"/>
                             </font>
                         </Button>
                     </children>
                 </HBox>
                 <MenuButton contentDisplay="RIGHT" mnemonicParsing="false" prefWidth="100.0" text="Cài đặt">
                     <items>
                         <MenuItem mnemonicParsing="false" onAction="#updateUserInformation" text="Chỉnh sửa thông tin cá nhân" />
                         <MenuItem mnemonicParsing="false" onAction="#updateUserPassword" text="Đổi mật khẩu" />
                         <MenuItem mnemonicParsing="false" onAction="#deactivationUser" text="Xóa tài khoản" />
                         <MenuItem mnemonicParsing="false" onAction="#logout" text="Đăng xuất" />
                     </items>
                     <HBox.margin>
                         <Insets />
                     </HBox.margin>
                     <font>
                         <Font size="16.0" />
                     </font>
                 </MenuButton>
                 <padding>
                     <Insets left="25.0" right="25.0" />
                 </padding>
             </HBox>
             <Button fx:id="addBook" contentDisplay="CENTER" onAction="#showAddBookDialog" prefHeight="25.0" prefWidth="119.0" text=" Thêm sách ">
                 <opaqueInsets>
                     <Insets />
                 </opaqueInsets>
               <font>
                  <Font size="15.0" />
               </font>
             </Button>
         </children>
      </VBox>
   </top>
   <center>

                <TableView fx:id="bookTable" prefHeight="662.0" prefWidth="1391.0" BorderPane.alignment="CENTER">
           <columns>

                        <TableColumn fx:id="idColumn" style="-fx-alignment: CENTER" text="Mã sách" />
               <TableColumn fx:id="imageColumn" prefWidth="132.0" style="-fx-alignment: CENTER" text="Hình ảnh" />
               <TableColumn fx:id="titleColumn" prefWidth="100.0" style="-fx-alignment: CENTER-LEFT" text="Tên sách" />
               <TableColumn fx:id="authorColumn" prefWidth="120.0" style="-fx-alignment: CENTER-LEFT" text="Tên tác giả" />
               <TableColumn fx:id="publishedYearColumn" prefWidth="90.0" style="-fx-alignment: CENTER" text="Năm xuất bản" />
               <TableColumn fx:id="editionColumn" prefWidth="90.0" style="-fx-alignment: CENTER" text="Lần xuất bản" />
               <TableColumn fx:id="priceColumn" style="-fx-alignment: CENTER" text="Giá bán" />
               <TableColumn fx:id="amountColumn" style="-fx-alignment: CENTER" text="Số lượng" />
               <TableColumn fx:id="bookTypeColumn" prefWidth="100.0" style="-fx-alignment: CENTER" text="Loại sách" />
               <TableColumn fx:id="publisherColumn" prefWidth="100.0" style="-fx-alignment: CENTER" text="Nhà xuất bản" />
               <TableColumn fx:id="statusColumn" prefWidth="100.0" style="-fx-alignment: CENTER" text="Trạng thái" />
               <TableColumn fx:id="actionColumn" prefWidth="205.0" style="-fx-alignment: CENTER" text="Hành động">
            </TableColumn>
           </columns>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
       </TableView>
   </center>
</BorderPane>
