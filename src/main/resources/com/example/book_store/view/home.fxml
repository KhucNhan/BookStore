        <columns>

            <TableColumn fx:id="idColumn" prefWidth="67" text="Mã sách" />
            <TableColumn fx:id="imageColumn" prefWidth="95.5" text="Hình ảnh" />
            <TableColumn fx:id="titleColumn" prefWidth="143" text="Tên sách" />
