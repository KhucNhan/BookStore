<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.book_store.Controller.OrderController">

    <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Button fx:id="goToHome" mnemonicParsing="false" onAction="#goToHome" text="Trang chủ">
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin></Button>
        <Button onAction="#goToUser" mnemonicParsing="false" text="Người dùng">
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin>
        </Button>
        <Button onAction="#goToOrder" mnemonicParsing="false" text="Đơn hàng">
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin></Button>
        <Button mnemonicParsing="false" text="Thống kê">
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin></Button>
    </HBox>

    <HBox alignment="CENTER" prefHeight="25.0" prefWidth="500.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <TextField prefHeight="25.0" prefWidth="552.0" />
        <Button prefHeight="25.0" prefWidth="123.0" text="Search">
            <HBox.margin>
                <Insets left="10.0" />
            </HBox.margin>
        </Button>
        <padding>
            <Insets left="25.0" right="25.0" />
        </padding>
    </HBox>

    <HBox alignment="CENTER" prefHeight="25.0" prefWidth="253.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
        <MenuButton contentDisplay="RIGHT" mnemonicParsing="false" prefWidth="100.0" text="Setting">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#updateUserInformation" text="Chỉnh sửa thông tin cá nhân" />
                <MenuItem mnemonicParsing="false" onAction="#updateUserPassword" text="Đổi mật khẩu" />
                <MenuItem mnemonicParsing="false" onAction="#deactivationUser" text="Xóa tài khoản" />
                <MenuItem mnemonicParsing="false" onAction="#logout" text="Đăng xuất" />
            </items>
            <HBox.margin>
                <Insets bottom="10.0" left="100.0" right="10.0" top="5.0" />
            </HBox.margin>
        </MenuButton>
    </HBox>

    <Region prefHeight="28.0" GridPane.rowIndex="1" />

    <Label prefHeight="27.0" prefWidth="222.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Danh Sách Đơn Hàng" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <TableView fx:id="orderTable" prefHeight="455.0" prefWidth="1128.0" GridPane.columnSpan="3" GridPane.rowIndex="3">
        <columns>
            <TableColumn fx:id="orderID" prefWidth="185.00003051757812" text=" Mã hóa đơn" />
            <TableColumn fx:id="userID" prefWidth="201.33334350585938" text="Mã khách hàng" />
            <TableColumn fx:id="date" minWidth="0.0" prefWidth="164.99993896484375" text="Ngày đặt hàng" />
            <TableColumn fx:id="status" prefWidth="175.33331298828125" text="Trạng Thái" />
            <TableColumn fx:id="action" prefWidth="269.666748046875" text="Hành Động" />
        </columns>
      <GridPane.margin>
         <Insets left="100.0" right="10.0" top="10.0" />
      </GridPane.margin>
    </TableView>

    <!-- Column and row constraints -->
    <columnConstraints>
        <ColumnConstraints maxWidth="414.6666666666667" minWidth="223.33333333333334" prefWidth="382.6666666666667" />
        <ColumnConstraints maxWidth="749.0" minWidth="443.3333333333333" prefWidth="648.3333333333333" />
        <ColumnConstraints maxWidth="347.3333333333335" minWidth="61.0" prefWidth="175.0" />
      <ColumnConstraints maxWidth="304.0" minWidth="0.0" prefWidth="0.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="40.33333524068197" minHeight="32.333333333333336" prefHeight="32.333333333333336" />
        <RowConstraints maxHeight="31.0" minHeight="22.999998092651367" prefHeight="31.0" />
        <RowConstraints />
        <RowConstraints maxHeight="464.6666666666667" minHeight="464.00000000000006" prefHeight="464.6666666666667" />
        <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
    </rowConstraints>
</GridPane>
