<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.book_store.Controller.AdminOrderController">
    <HBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Button fx:id="goToHome" mnemonicParsing="false" onAction="#goToHome" prefHeight="25.0" prefWidth="82.0" text="Trang chủ">
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin></Button>
        <Button fx:id="goToUser" mnemonicParsing="false" prefHeight="25.0" prefWidth="88.0" text="Người dùng">
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin></Button>
        <Button fx:id="goToOrder" mnemonicParsing="false" onAction="#goToOrder" prefHeight="25.0" prefWidth="89.0" text=" Đơn hàng">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </HBox.margin></Button>
        <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="87.0" text="Thống kê">
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin></Button>
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin>
    </HBox>

    <HBox alignment="CENTER" prefHeight="40.0" prefWidth="674.0" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <TextField prefHeight="25.0" prefWidth="475.0">
         <HBox.margin>
            <Insets top="10.0" />
         </HBox.margin></TextField>
        <Button prefHeight="25.0" prefWidth="87.0" text="Search">
         <HBox.margin>
            <Insets top="10.0" />
         </HBox.margin></Button>
    </HBox>

    <HBox alignment="CENTER" prefHeight="23.0" prefWidth="217.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
        <MenuButton contentDisplay="RIGHT" mnemonicParsing="false" prefWidth="100.0" text="Setting">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#updateUserInformation" text="Chỉnh sửa thông tin cá nhân" />
                <MenuItem mnemonicParsing="false" onAction="#updateUserPassword" text="Đổi mật khẩu" />
                <MenuItem mnemonicParsing="false" onAction="#deactivationUser" text="Xóa tài khoản" />
                <MenuItem mnemonicParsing="false" onAction="#logout" text="Đăng xuất" />
            </items>
         <HBox.margin>
            <Insets left="90.0" top="10.0" />
         </HBox.margin>
        </MenuButton>
    </HBox>

    <!-- Spacer Region -->
    <Region prefHeight="28.0" prefWidth="429.0" GridPane.rowIndex="1" />

    <!-- Label for Order List -->
    <Label prefHeight="27.0" prefWidth="222.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Danh Sách Đơn Hàng" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <!-- TableView for orders -->
    <TableView fx:id="billTable" prefHeight="678.0" prefWidth="1122.0" GridPane.columnSpan="3" GridPane.rowIndex="3">
        <columns>
            <TableColumn fx:id="billId" prefWidth="118.66667175292969" text="Mã Đơn Hàng" />
            <TableColumn fx:id="customerId" prefWidth="155.99996948242188" text=" Mã Khách Hàng" />
            <TableColumn fx:id="date" prefWidth="140.0" text="Ngày Đặt Hàng" />
            <TableColumn fx:id="totalAmount" minWidth="0.0" prefWidth="167.99996948242188" text="Tổng Số Tiền" />
            <TableColumn fx:id="status" prefWidth="140.0" text="Trạng Thái" />
            <TableColumn fx:id="action" prefWidth="217.33331298828125" text="Hành Động" />
        </columns>
      <GridPane.margin>
         <Insets left="100.0" right="10.0" top="10.0" />
      </GridPane.margin>
    </TableView>

    <!-- Column and row constraints -->
    <columnConstraints>
        <ColumnConstraints maxWidth="396.6666666666667" minWidth="223.33333333333334" prefWidth="396.6666666666667" />
        <ColumnConstraints maxWidth="749.0" minWidth="476.3333333333333" prefWidth="672.0" />
        <ColumnConstraints maxWidth="348.0" minWidth="61.0" prefWidth="164.0" />
      <ColumnConstraints maxWidth="304.0" minWidth="0.0" prefWidth="39.33333333333326" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="48.333333333333336" minHeight="29.333331425984703" prefHeight="39.666666666666664" />
        <RowConstraints maxHeight="34.00000190734863" minHeight="15.0" prefHeight="24.333333333333336" />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
