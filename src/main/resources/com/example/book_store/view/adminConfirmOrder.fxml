<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.book_store.Controller.AdminOrderController">
    <!-- Top HBox for navigation and settings -->
    <HBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Button fx:id="goToHome" mnemonicParsing="false" onAction="#goToHome" text="Trang chủ">
         <HBox.margin>
            <Insets top="10.0" />
         </HBox.margin></Button>
        <Button fx:id="goToCart" mnemonicParsing="false" onAction="#goToOrder" text=" Đơn hàng">
         <HBox.margin>
            <Insets top="10.0" />
         </HBox.margin></Button>
        <Button mnemonicParsing="false" text="Thống kê">
         <HBox.margin>
            <Insets top="10.0" />
         </HBox.margin></Button>
    </HBox>

    <HBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <TextField prefHeight="25.0" prefWidth="475.0">
         <HBox.margin>
            <Insets top="10.0" />
         </HBox.margin></TextField>
        <Button prefHeight="25.0" prefWidth="87.0" text="Search">
         <HBox.margin>
            <Insets top="10.0" />
         </HBox.margin></Button>
    </HBox>

    <HBox alignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="0">
        <MenuButton contentDisplay="RIGHT" mnemonicParsing="false" prefWidth="100.0" text="Setting">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#updateUserInformation" text="Chỉnh sửa thông tin cá nhân" />
                <MenuItem mnemonicParsing="false" onAction="#updateUserPassword" text="Đổi mật khẩu" />
                <MenuItem mnemonicParsing="false" onAction="#deactivationUser" text="Xóa tài khoản" />
                <MenuItem mnemonicParsing="false" onAction="#logout" text="Đăng xuất" />
            </items>
         <HBox.margin>
            <Insets top="10.0" />
         </HBox.margin>
        </MenuButton>
    </HBox>

    <!-- Spacer Region -->
    <Region prefHeight="28.0" GridPane.rowIndex="1" />

    <!-- Label for Order List -->
    <Label prefHeight="27.0" prefWidth="222.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Danh Sách Đơn Hàng" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <!-- TableView for orders -->
    <TableView fx:id="billTable" prefHeight="454.0" prefWidth="941.0" GridPane.columnSpan="3" GridPane.rowIndex="3">
        <columns>
            <TableColumn fx:id="billId" prefWidth="118.66667175292969" text="Mã Đơn Hàng" />
            <TableColumn fx:id="customerId" prefWidth="155.99996948242188" text=" Mã Khách Hàng" />
            <TableColumn fx:id="date" prefWidth="140.0" text="Ngày Đặt Hàng" />
            <TableColumn fx:id="totalAmount" minWidth="0.0" prefWidth="167.99996948242188" text="Tổng Số Tiền" />
            <TableColumn fx:id="status" prefWidth="140.0" text="Trạng Thái" />
            <TableColumn fx:id="action" prefWidth="217.33331298828125" text="Hành Động" />
        </columns>
      <GridPane.margin>
         <Insets left="100.0" right="10.0" top="10.0" />
      </GridPane.margin>
    </TableView>

    <!-- Column and row constraints -->
    <columnConstraints>
        <ColumnConstraints maxWidth="284.33334859212243" minWidth="223.33333333333334" prefWidth="284.33334859212243" />
        <ColumnConstraints maxWidth="749.0" minWidth="505.0" prefWidth="572.9999847412109" />
        <ColumnConstraints maxWidth="304.0" minWidth="61.0" prefWidth="154.0" />
      <ColumnConstraints maxWidth="304.0" minWidth="61.0" prefWidth="154.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
