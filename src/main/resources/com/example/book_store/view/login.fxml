<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER"  style="-fx-background-image: url('https://thaitrien.com/wp-content/uploads/2021/08/sach-store-size.jpg'); -fx-background-size: cover; -fx-background-position: center;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.book_store.Controller.Authentication">
    <children>
        <VBox alignment="CENTER_LEFT" layoutX="442.0" layoutY="248.0" prefHeight="334.0" prefWidth="396.0" spacing="10" style="-fx-background-color: #e3ecff; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #003399;">
            <Label contentDisplay="CENTER" prefHeight="27.0" prefWidth="368.0" style="-fx-font-size: 18px; -fx-text-fill: #003399;" text="ĐĂNG NHẬP VÀO TÀI KHOẢN">
            <padding>
               <Insets left="55.0" />
            </padding></Label>
            <Label prefHeight="17.0" prefWidth="370.0" text="Tên đăng nhập">
            <font>
               <Font size="15.0" />
            </font></Label>
            <TextField fx:id="usernameField" maxWidth="387.0" prefHeight="25.0" prefWidth="387.0" promptText="Tên đăng nhập" />
            <Label prefHeight="17.0" prefWidth="372.0" text="Mật khẩu">
            <font>
               <Font size="15.0" />
            </font></Label>
            <PasswordField fx:id="passwordField" maxWidth="374.0" prefHeight="25.0" prefWidth="374.0" promptText="Mật khẩu" />
            <Hyperlink fx:id="forgotPasswordLink" text="Quên mật khẩu?" />
            <HBox alignment="CENTER">
                <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #003399; -fx-text-fill: white;" text="ĐĂNG NHẬP">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>

                <Button onAction="#goToSignUp" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #003399; -fx-text-fill: white;" text="ĐĂNG KÝ">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Button>
            </HBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</GridPane>
