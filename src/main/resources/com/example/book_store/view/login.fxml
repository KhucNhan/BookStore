<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0"
            prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.book_store.Controller.Authentication">
    <children>
        <VBox alignment="CENTER_LEFT" layoutX="159.0" layoutY="55.0" prefHeight="293.0" prefWidth="376.0" spacing="10">
            <Label contentDisplay="CENTER" style="-fx-font-size: 18px; -fx-text-fill: #003399;"
                   text="ĐĂNG NHẬP VÀO TÀI KHOẢN"/>
            <Label prefHeight="17.0" prefWidth="293.0" text="Tên đăng nhập"/>
            <TextField fx:id="usernameField" maxWidth="300.0" promptText="Tên đăng nhập"/>
            <Label prefHeight="17.0" prefWidth="297.0" text="Mật khẩu"/>
            <PasswordField fx:id="passwordField" maxWidth="300.0" promptText="Mật khẩu"/>
            <Hyperlink fx:id="forgotPasswordLink" text="Quên mật khẩu?"/>
            <HBox alignment="CENTER">
                <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="25.0" prefWidth="100.0"
                        style="-fx-background-color: #003399; -fx-text-fill: white;" text="ĐĂNG NHẬP">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Button>

                <Button onAction="#goToSignUp" prefHeight="25.0" prefWidth="100.0"
                        style="-fx-background-color: #003399; -fx-text-fill: white;" text="ĐĂNG KÝ">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </Button>
            </HBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
