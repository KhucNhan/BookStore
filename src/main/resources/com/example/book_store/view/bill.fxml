<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane nodeOrientation="LEFT_TO_RIGHT"
          xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.book_store.Controller.BillController">

    <HBox fx:id="menuBar" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Button mnemonicParsing="false"  prefWidth="130.0" onAction="#goToHome" text="Trang chủ">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="goToCart" mnemonicParsing="false" prefWidth="130.0"  onAction="#goToCart" text="Giỏ hàng">
            <HBox.margin>
                <Insets right="15.0"/>
            </HBox.margin>
        </Button>
        <Button onAction="#goToUser" fx:id="goToUser" prefWidth="130.0"  mnemonicParsing="false" text="Người dùng">
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin>
        </Button>
        <Button fx:id="goToOrder" onAction="#goToOrder" prefWidth="130.0"  mnemonicParsing="false" text=" Đơn hàng">
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin></Button>
        <Button onAction="#goToTop5" mnemonicParsing="false"  prefWidth="130.0" text="Thống kê">
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin></Button>
        <Button onAction="#goToHistory" mnemonicParsing="false" prefWidth="185.0"  text="Lịch sử mua hàng">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Button>
    </HBox>
    <HBox alignment="CENTER" prefHeight="40.0" prefWidth="666.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <TextField prefHeight="25.0" prefWidth="552.0">
            <HBox.margin>
                <Insets top="5.0"/>
            </HBox.margin>
        </TextField>
        <Button prefHeight="25.0" prefWidth="123.0" text="Search">
            <HBox.margin>
                <Insets left="10.0" top="5.0"/>
            </HBox.margin>
        </Button>
        <padding>
            <Insets left="25.0" right="25.0"/>
        </padding>
    </HBox>
    <HBox alignment="CENTER" prefHeight="41.0" prefWidth="302.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
        <MenuButton contentDisplay="RIGHT" mnemonicParsing="false" prefWidth="100.0" text="Setting">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#updateUserInformation" text="Chỉnh sửa thông tin cá nhân"/>
                <MenuItem mnemonicParsing="false" onAction="#updateUserPassword" text="Đổi mật khẩu"/>
                <MenuItem mnemonicParsing="false" onAction="#deactivationUser" text="Xóa tài khoản"/>
                <MenuItem mnemonicParsing="false" onAction="#logout" text="Đăng xuất"/>
            </items>
            <HBox.margin>
                <Insets bottom="10.0" left="120.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </MenuButton>
    </HBox>
    <TableView fx:id="billTable" prefHeight="685.0" prefWidth="998.0" GridPane.columnSpan="3" GridPane.rowIndex="2">
        <columns>
            <TableColumn fx:id="billID" prefWidth="203.6666717529297" text="Mã Bill"/>
            <TableColumn fx:id="userID" prefWidth="203.6666717529297" text="Mã khách hàng"/>
            <TableColumn fx:id="orderId" prefWidth="203.6666717529297" text="Mã đơn hàng"/>
            <TableColumn fx:id="date" prefWidth="185.33334350585938" text="Ngày đặt "/>
            <TableColumn fx:id="totalAmount" prefWidth="195.99996948242188" text="Tổng tiền"/>
            <TableColumn fx:id="act" prefWidth="186.0" text="Hành động"/>
        </columns>
        <GridPane.margin>
            <Insets left="100.0" top="10.0"/>
        </GridPane.margin>
    </TableView>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="345.33333333333337" minWidth="10.0"
                           prefWidth="293.3333333333333"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="699.0" minWidth="10.0" prefWidth="678.0"/>
        <ColumnConstraints maxWidth="353.33333333333337" minWidth="200.33333333333337" prefWidth="149.33333333333337"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="174.0" minHeight="0.0" prefHeight="26.333335240681976" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="460.3333333333333" minHeight="6.000000000000014" prefHeight="29.000000000000014"
                        vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="713.3333333333333" minHeight="10.0" prefHeight="690.3333333333333"
                        vgrow="SOMETIMES"/>
    </rowConstraints>
</GridPane>
